<div class="form-row">
    <div class="form-item">
        <label for="">Title</label>
        <input required type="text" name="title" value="<%= book.title %>">
    </div>
    <div class="form-item">
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author => { %>
            <% if(author.id == book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>"></option> <!-- if author.id = book.id then select it -->
            <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>"></option>
            <%  } %>
            <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label for="">Publish Date</label>
        <% if(book.publishDate != null) { %>
        <input required type="date" name="publishDate" value="<%= book.publishDate.toISOString().split('T')[0] %>">
        <!-- convert publishDate to correct notation -->
        <% } else { %>
        <input required type="date" name="publishDate">
        <% } %>
    </div>
    <div class="form-item">
        <label for="">Page Count</label>
        <input required type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input required type="file" name="cover" class="filepond">
        <!-- mÃ¥ ha 'filepond' class for at parsing til filepond skal fungere -->
    </div>
    <div class="form-item">
            <label>Description</label>
            <textarea required name="description"><%= book.description %></textarea>
    </div>
</div>